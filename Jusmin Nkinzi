    <script>
        let currentScreen = 1;

        // Generate starfield
        function createStars() {
            const starfield = document.getElementById('starfield');
            const starCount = 80;
            for (let i = 0; i < starCount; i++) {
                const star = document.createElement('div');
                star.className = 'star';
                star.style.left = Math.random() * 100 + '%';
                star.style.top = Math.random() * 100 + '%';
                star.style.animationDelay = Math.random() * 3 + 's';
                starfield.appendChild(star);
            }
        }

        // Trail hearts on mouse/touch move
        function addTrailHeart(x, y) {
            const heart = document.createElement('div');
            heart.className = 'trail-heart';
            heart.textContent = 'üíï';
            heart.style.left = x + 'px';
            heart.style.top = y + 'px';
            document.body.appendChild(heart);
            setTimeout(() => heart.remove(), 800);
        }

        document.addEventListener('mousemove', (e) => {
            if (Math.random() < 0.1) {
                addTrailHeart(e.clientX, e.clientY);
            }
        });

        document.addEventListener('touchmove', (e) => {
            if (Math.random() < 0.1) {
                const touch = e.touches[0];
                addTrailHeart(touch.clientX, touch.clientY);
            }
        });

        // Screen navigation
        function showScreen(screenNumber) {
            document.querySelectorAll('.screen').forEach(s => s.classList.remove('active'));
            document.getElementById('screen' + screenNumber).classList.add('active');
            window.scrollTo(0, 0);
        }

        function nextScreen() {
            currentScreen++;
            showScreen(currentScreen);
        }

        function yesResponse() {
            createHeartBurst();
            showScreen('4yes');
        }

        function notYetScreen() {
            showScreen('4notyet');
        }

        function goBackToQuestion() {
            showScreen(3);
        }

        function goodnight() {
            showScreen(5);
        }

        // Heart burst animation on "Yes"
        function createHeartBurst() {
            const hearts = ['‚ù§Ô∏è', 'üíï', 'üíñ', 'üíó', 'üíù'];
            const centerX = window.innerWidth / 2;
            const centerY = window.innerHeight / 2;

            for (let i = 0; i < 20; i++) {
                const heart = document.createElement('div');
                heart.className = 'heart-fall';
                heart.textContent = hearts[Math.floor(Math.random() * hearts.length)];
                heart.style.left = (centerX + (Math.random() - 0.5) * 200) + 'px';
                heart.style.top = (centerY - 50) + 'px';
                heart.style.fontSize = (1.5 + Math.random()) + 'rem';
                heart.style.animationDuration = (2 + Math.random() * 1.5) + 's';
                document.body.appendChild(heart);
                setTimeout(() => heart.remove(), 3500);
            }
        }

        // Screenshot button (just provides guidance)
        function shareScreenshot() {
            alert('üì∏ Perfect! Just take a screenshot of this screen and you can share it whenever you\'d like. üíï');
        }

        // Initialize
        createStars();
    </script>
</body>
